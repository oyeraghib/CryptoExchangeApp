<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/black"
    android:layout_marginTop="88dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- unused for the effect -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="36dp"
                app:cardElevation="6dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="#111768">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INR"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_chip"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,57,342.05"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+₹1,342    +4.6%"
                        android:textColor="@android:color/holo_green_light"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- unused for the effect -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="#2A1F7F">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INR"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_chip"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,57,342.05"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+₹1,342    +4.6%"
                        android:textColor="@android:color/holo_green_light"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Gradient Card View -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="?attr/gradientBackground">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="INR"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_inr_button"
                        android:textSize="14sp"
                        android:fontFamily="@font/font_giest_mono_regular"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,57,342.05"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/font_inter_medium"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹1,104"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/font_inter_medium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+2.6%"
                            android:textColor="@color/exchange_increase_green"
                            android:textSize="14sp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/font_inter_medium"/>
                    </LinearLayout>



                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </FrameLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="?attr/bg_button_circle"
                android:src="@drawable/ic_arrow_up"
                />

            <ImageButton
                android:id="@+id/btnExchange"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="?attr/bg_button_circle"
                android:src="@drawable/ic_add"
                />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="?attr/bg_button_circle"
                android:src="@drawable/ic_full_arrow_down"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Transactions"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:fontFamily="@font/font_giest_mono_regular"/>

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last 4 days"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:fontFamily="@font/font_inter_medium"/>
        </LinearLayout>

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRecentTransactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
