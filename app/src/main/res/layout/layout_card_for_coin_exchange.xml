<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/cardRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/gray"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:clipToOutline="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/ivCoinIconSend"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_eth_png" />

        <TextView
            android:id="@+id/tvCoinNameSend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:text="ETH"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivArrowSend"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_down"
            android:contentDescription="Select coin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Value -->
    <TextView
        android:id="@+id/tvAmountSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.640"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Balance row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance"
            android:textColor="#808080"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvBalanceSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.254"
            android:textColor="#808080"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>